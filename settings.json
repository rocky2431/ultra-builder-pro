{
  "cleanupPeriodDays": 30,
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "attribution": {
    "commit": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)\n\nCo-Authored-By: Claude Opus 4.5 <noreply@anthropic.com>",
    "pr": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)"
  },
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "WebFetch",
      "Grep",
      "Glob",
      "Read",
      "Write",
      "Edit",
      "NotebookEdit",
      "Task",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet",
      "Skill",
      "SlashCommand",
      "AskUserQuestion",
      "BashOutput",
      "KillShell",
      "ExitPlanMode",
      "mcp__*",
      "mcp__pencil"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./.env.development)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(./**/*secret*)",
      "Read(./**/*password*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/post_edit_guard.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/block_dangerous_commands.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/session_context.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre_stop_check.py"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/subagent_tracker.py start",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/subagent_tracker.py stop",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre_compact_context.py",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "planning-with-files@planning-with-files": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  },
  "language": "Chinese",
  "sandbox": {
    "enabled": false,
    "_comment": "Set to true for sandboxed bash execution with file system and network isolation"
  },
  "_comment_project": "Ultra Builder Pro 5.4.0",
  "_comment_version": "5.4.0 - Agent & Memory Edition"
}
