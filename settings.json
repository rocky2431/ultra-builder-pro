{
  "cleanupPeriodDays": 30,
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "attribution": {
    "commit": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)\n\nCo-Authored-By: Claude Opus 4.5 <noreply@anthropic.com>",
    "pr": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)"
  },
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "WebFetch",
      "Grep",
      "Glob",
      "Read",
      "Write",
      "Edit",
      "NotebookEdit",
      "Task",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet",
      "Skill",
      "SlashCommand",
      "AskUserQuestion",
      "BashOutput",
      "KillShell",
      "ExitPlanMode",
      "mcp__*"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./.env.development)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)",
      "Read(./**/*secret*)",
      "Read(./**/*password*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/user_prompt_agent.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/block_dangerous_commands.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/branch_protection.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/code_quality.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/mock_detector.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/security_scan.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/agent_reminder.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/agent_reminder.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre_stop_check.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/session_context.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "enabledPlugins": {
    "pr-review-toolkit@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true
  },
  "language": "Chinese",
  "sandbox": {
    "enabled": false,
    "_comment": "Set to true for sandboxed bash execution with file system and network isolation"
  },
  "_comment_project": "Ultra Builder Pro 5.2.0",
  "_comment_version": "5.2.0 - Hooks enforcement system"
}
